                    <children>
                        <ImageView fitHeight="34.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@file:info.png"/>
                            </image>
                            <HBox.margin>
                                <Insets left="50.0"/>
                            </HBox.margin>
                        </ImageView>
                        <Label fx:id="help_menu" text="Help" textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <padding>
                                <Insets left="30.0"/>
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <Label text="Label"/>
            </children>
