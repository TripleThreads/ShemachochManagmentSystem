        <JFXTreeTableView fx:id="treeView" layoutX="672.0" layoutY="166.0" prefHeight="400.0" prefWidth="691.0"
                          stylesheets="@../stylesheet.css" tableMenuButtonVisible="true" AnchorPane.leftAnchor="350.0"
                          AnchorPane.rightAnchor="50.0"/>
        <JFXDatePicker fx:id="datePicker" defaultColor="#1b8ecd" layoutX="1125.0" layoutY="112.0"
                       onAction="#generateReportByDate" promptText="specific date" showWeekNumbers="true"
                       AnchorPane.rightAnchor="50.0"/>
        <JFXComboBox fx:id="monthPicker" focusColor="#2b8ef8" labelFloat="true" layoutX="913.0" layoutY="112.0"
                     onAction="#generateReportByMonth" promptText="Select by month" AnchorPane.rightAnchor="299.0"/>
